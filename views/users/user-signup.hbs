<section>
    <div class="signUpPageMainDiv">
        <div class="row">

             <div class="col-11 col-md-6 text-center mt-5">
                 <div class="logoSignupPage">
                      <img src="images/weBlogLogo.png" alt="" style="height: 200px; width: auto;">
                 </div>
                 <h1 class="logoName">WeBlog</h1>
                 <p style="color: black; font-weight: bolder;">Let world know your thoughts</p>
                   
                </div>

            <div class="col-11 col-md-4  signUpFormDiv pt-3">
                
                <form enctype="multipart/form-data" method="POST" action="/signup">
                    <div class="form-group">
                        <img id="imgVew" src="/images/profile-images/default-dp.png" alt="default-dp" style="border-radius: 50%; height: 50px; width:50px;"><br>
                        <label for="exampleInputEmail1">Email address</label>
                       

                        <input type="email" class="form-control" id="exampleInputEmail1" name="email"
                            aria-describedby="emailHelp" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="Username">Username</label>
                        <input type="text" class="form-control" id="" name="username" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <label for="Username">Password</label>
                        <input type="text" class="form-control" id="" name="password" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">About</label>
                        <textarea class="form-control" name="about" rows="3"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlFile1">Upload Image</label>
                        <input type="file" class="form-control-file" name="Image" onchange="viewImage(event)">
                    </div>
                    <button type="submit" class="btn btn-primary" style="margin: auto;">Create Account</button><br>
                    {{#if check.status}}
                    <label for="" style="background-color: yellow; color: black; font-weight: 500; font-size: larger;">user with same email already exist</label>
                    {{/if}}
                </form>
                           
            </div>
        </div>
    </div>
</section>

<script>
    function viewImage(event){
        document.getElementById('imgVew').src=URL.createObjectURL(event.target.files[0])
    }
</script>